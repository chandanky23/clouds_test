{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"],
    },
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "app/types"]
  },
  "compileOnSave": true,
  "include": ["app/**/*", "**/*.ts"],
  "exclude": ["build"]
}
